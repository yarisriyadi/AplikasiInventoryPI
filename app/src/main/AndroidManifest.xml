        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HitungPengeluaran"
        tools:targetApi="tiramisu"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".TambahPelangganActivity"
            android:exported="true" />
        <activity
            android:name=".PelangganActivity"
            android:exported="true" />
        <activity
            android:name=".TambahPengeluaranActivity"
            android:exported="true" />
        <activity
            android:name=".PengeluaranActivity"
            android:exported="true" />
        <activity
            android:name=".BantuanActivity"
            android:exported="true" />
        <activity
            android:name=".AboutActivity"
            android:exported="true" />
        <activity
            android:name=".TambahTransaksiActivity"
            android:exported="true" />
        <activity
            android:name=".TransaksiActivity"
            android:exported="true" />
        <activity
            android:name=".TambahProdukActivity"
            android:exported="true" />
        <activity
            android:name=".ProdukActivity"
            android:exported="true" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
        </activity>
    <activity
        android:name=".HomeActivity"
        android:exported="true"/>
        <activity android:name=".ScanCodeActivity" />
    </application>

</manifest>